extends layout
block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Espécie #{especies[0].Espécie} ( #{especies[0]["Nome Científico"]})
    .w3-container
      table.w3-table-all
        tr
          th ID
          th Freguesia
          th Espécie
          th Estado 
          th Número de Intervenções
        
        each especie in especies
          tr
            td #[a(href="/"+especie.Id)= especie._id]
            td= especie.Freguesia
            td= especie.Espécie
            td= especie.Estado
            td #{especie['Número de intervenções']}
              
    footer.w3-container.w3-blue
      h5 Generated by Eu o RAFAEL in #{d} - #[a(href="/") Return]
