extends layout
block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Cabeçalho BUE FIXE, QUANTIDADE DE REGISTOS: #{contador}
    .w3-container
      table.w3-table-all
        tr
          th Id
          th Freguesia
          th Espécie
          th Estado 
          th Numero de Intervenções
        
        each planta in plantas
          tr
            td #[a(href="/"+planta.Id)= planta._id]
            td= planta.Freguesia
            td #[a(href="/especies/"+planta.Espécie)= planta.Espécie]
            td= planta.Estado
            td #{planta['Número de intervenções']}
    footer.w3-container.w3-blue
      h5 Generated by eu
