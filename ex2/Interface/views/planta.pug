extends layout

block content
    .w3-card-4
        header.w3-container.w3-blue
            h2 Registo da Planta #{planta._id}
        br
        .w3-container.w3-padding
            h3 _id: #{planta._id}
            h3 Id: #{planta.Id}
            h3 Número do Registo: #{planta["Número do Registo"]}
            h3 Código de rua: #{planta["Código de rua"]}
            h3 Rua: #{planta.Rua}
            h3 Local: #{planta.Local}
            h3 Freguesia: #{planta.Freguesia}
            h3 Espécie: #{planta.Espécie}
            h3 Nome Científico: #{planta["Nome Científico"]}
            h3 Origem: #{planta.Origem}
            h3 Data de Plantação: #{planta["Data de Plantação"]}
            h3 Estado: #{planta.Estado}
            h3 Caldeira: #{planta.Caldeira}
            h3 Tutor: #{planta.Tutor}
            h3 Implantação: #{planta.Implantação}
            h3 Gestor: #{planta.Gestor}
            h3 Data de atualizações: #{planta["Data de atualizações"]}
            h3 Número de intervenções: #{planta["Número de intervenções"]}
        footer.w3-container.w3-blue
            h5 Generated by O MELHOR RAFAEL in #{d} - #[a(href="/") Return]